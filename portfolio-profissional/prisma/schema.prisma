// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  auditLogs AuditLog[]
  
  @@index([email])
  @@index([createdAt])
  @@map("users")
}

model PortfolioData {
  id           String   @id @default(cuid())
  version      Int      @default(1)
  data         String   // JSON as string for SQLite
  isPublished  Boolean  @default(false)
  lastModified DateTime @default(now())
  modifiedBy   String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([isPublished])
  @@index([lastModified])
  @@index([version])
  @@map("portfolio_data")
}

model DynamicModal {
  id        String   @id @default(cuid())
  type      String
  title     String
  content   String   // JSON as string for SQLite
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([type])
  @@index([isActive])
  @@index([createdAt])
  @@map("dynamic_modals")
}

model MediaFile {
  id          String   @id @default(cuid())
  filename    String
  originalName String
  url         String
  publicId    String?
  category    String
  size        Int
  mimeType    String
  tags        String   @default("") // Comma-separated string for SQLite
  usedIn      String   @default("") // Comma-separated string for SQLite
  isArchived  Boolean  @default(false)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([category])
  @@index([isArchived])
  @@index([filename])
  @@index([createdAt])
  @@map("media_files")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  section   String
  oldData   String?  // JSON as string for SQLite
  newData   String?  // JSON as string for SQLite
  timestamp DateTime @default(now())
  ipAddress String
  userAgent String
  
  user User @relation(fields: [userId], references: [id])
  
  @@index([userId])
  @@index([action])
  @@index([section])
  @@index([timestamp])
  @@map("audit_logs")
}

model AdminSettings {
  id                  String   @id @default(cuid())
  autoSave           Boolean  @default(true)
  autoSaveInterval   Int      @default(30)
  requirePreview     Boolean  @default(false)
  backupRetention    Int      @default(30)
  allowedImageFormats String   @default("jpg,jpeg,png,webp") // Comma-separated string for SQLite
  maxImageSize       Int      @default(5)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  
  @@map("admin_settings")
}